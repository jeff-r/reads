<h1>Listing feed_items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Link</th>
    <th>Feed</th>
    <th>Read</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feed_items.each do |feed_item| %>
  <tr>
    <td><%= feed_item.title %></td>
    <td><%= feed_item.link %></td>
    <td><%= feed_item.feed_id %></td>
    <td><%= feed_item.read %></td>
    <td><%= feed_item.description %></td>
    <td><%= link_to 'Show', feed_item %></td>
    <td><%= link_to 'Edit', edit_feed_item_path(feed_item) %></td>
    <td><%= link_to 'Delete', feed_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feed item', new_feed_item_path %>

<p><%= link_to 'Delete all items', url_for(:delete_all_items)%></p>
